{
  "name": "Producto",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "Descripcion": {
      "type": "string",
      "required": true
    },
    "Referencia": {
      "type": "string",
      "required": true
    },
    "PrecioiVenta": {
      "type": "number",
      "required": true
    },
    "Beneficio": {
      "type": "number",
      "required": true
    }
  },
  "validations": [],
  "relations": {
    "pedidos": {
      "type": "hasMany",
      "model": "Pedido",
      "foreignKey": "id"
    },
    "proveedores": {
      "type": "hasOne",
      "model": "Proveedor",
      "foreignKey": "id"
    },
    "tipoProducto": {
      "type": "hasOne",
      "model": "TipoProducto",
      "foreignKey": "tipo"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "coordinador",
      "permission": "ALLOW"
    }
  ],
  "methods": {}
}
